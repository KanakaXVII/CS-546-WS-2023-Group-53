<div class="dashboard-container">
  <nav class="navbar">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a href="/profile" class="nav-link">Profile</a>
      </li>
      <li class="nav-item">
        <a href="/transactions" class="nav-link">Transactions</a>
      </li>
      <li class="nav-item">
        <a href="/budgets" class="nav-link">Budgets</a>
      </li>
      <li class="nav-item">
        <a href="/paychecks" class="nav-link">Paychecks</a>
      </li>
      <li class="nav-item">
        <form method="POST" action="/logout">
          <button type="submit" class="nav-link">Logout</button>
        </form>
      </li>
    </ul>
  </nav>
  <div class="dashboard-box transactions-box">
    <h2>Transactions</h2>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Method</th>
          <th>Expense Name</th>
          <th>Amount</th>
          <th>Category</th>
        </tr>
      </thead>
      <tbody>
        {{#each transactions}}
          <tr>
            <td>{{this.date}}</td>
            <td>{{this.method}}</td>
            <td>{{this.expenseName}}</td>
            <td>{{this.amount}}</td>
            <td>{{this.category}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <div class="dashboard-box paychecks-box">
    <h2>Paychecks</h2>
    <table>
      <thead>
        <tr>
          <th>Date Received</th>
          <th>Paycheck Amount</th>
          <th>Notes</th>
        </tr>
      </thead>
      <tbody>
        {{#each paychecks}}
          <tr>
            <td>{{this.dateReceived}}</td>
            <td>{{this.paycheckAmount}}</td>
            <td>{{this.notes}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <div class="dashboard-box budgets-box">
    <h2>Budgets</h2>
    <table>
      <thead>
        <tr>
          <th>Category</th>
          <th>Budgeted Amount</th>
          <th>Actual Amount</th>
        </tr>
      </thead>
      <tbody>
        {{#each budgets}}
          {{#each this.budgets}}
            <tr>
              <td>{{this.name}}</td>
              <td>{{this.budgetedAmount}}</td>
              <td>{{this.actualAmount}}</td>
            </tr>
          {{/each}}
        {{/each}}
      </tbody>
      <tfoot>
        <tr>
          <td colspan="2">Total Spend:</td>
          <td>{{totalSpend}}</td>
        </tr>
        <tr>
          <td colspan="2">Total Budget:</td>
          <td>{{totalBudget}}</td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>